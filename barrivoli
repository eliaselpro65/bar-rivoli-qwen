  const [menuCategory, setMenuCategory] = useState('refrescos');
  const [faqOpen, setFaqOpen] = useState(null);
  const [isMenuOpen, setIsMenuOpen] = useState(false);

  const businessInfo = {
    name: "Caf√© Rivoli",
