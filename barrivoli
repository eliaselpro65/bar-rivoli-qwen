              ) : (
                <ChevronDown size={28} />
              )}
            </button>
          </div>
          
          {/* Mobile Navigation */}
          {isMenuOpen && (
            <motion.div 
              initial={{ opacity: 0, height: 0 }}
              animate={{ opacity: 1, height: 'auto' }}
              exit={{ opacity: 0, height: 0 }}
              className="md:hidden pb-4"
            >
              <ul className="space-y-3">
                {['hero', 'menu', 'jamones', 'gallery', 'about', 'reviews', 'faq', 'contact'].map((section) => (
                  <li key={section}>
                    <button
                      onClick={() => scrollToSection(section)}
                      className={`block w-full text-left text-white font-medium py-2 px-4 rounded transition-colors ${
                        activeSection === section 
                          ? 'bg-[#2d5a42] text-[#a8d5a2]' 
                          : 'hover:bg-[#2d5a42]'
                      }`}
                    >
                      {section === 'hero' ? 'Inicio' : 
                       section === 'menu' ? 'Men√∫' :
                       section === 'jamones' ? 'Jam√≥n' :
                       section === 'gallery' ? 'Galer√≠a' :
                       section === 'about' ? 'Sobre Nosotros' :
                       section === 'reviews' ? 'Rese√±as' :
                       section === 'faq' ? 'FAQ' :
